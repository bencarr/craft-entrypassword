{% import "_includes/forms.html" as forms %}

{% do view.registerAssetBundle("bencarr\\entrypassword\\assetbundles\\entrypassword\\EntryPasswordAsset") %}

{{ forms.lightswitchField({
    label: 'Require Password for Authenticated Users',
    instructions: 'Require authenticated Craft admins also enter the password to view the entry template.',
    id: 'requiredForAuthenticatedUsers',
    name: 'requiredForAuthenticatedUsers',
    on: field['requiredForAuthenticatedUsers']}) }}

{{ forms.selectField({
    label: 'Cookie Expiration',
    instructions: 'How long should the validation cookie last?',
    id: 'cookieExpiration',
    name: 'cookieExpiration',
    type: 'number',
    options: [
        {value: 0, label: 'Browser Session'},
        {value: 60 * 60 * 24, label: '1 Day'},
        {value: 60 * 60 * 24 * 7, label: '1 Week'},
        {value: 60 * 60 * 24 * 30, label: '1 Month'},
        {value: 60 * 60 * 24 * 365, label: '1 Year'},
    ],
    value: field['cookieExpiration'],
}) }}

{{ forms.lightswitchField({
    label: 'Move Password Field to Sidebar',
    instructions: 'Show the password field in the entry sidebar, rather than its field layout position. The field will still display in its field layout position in the HUD editor.',
    id: 'displaysInSidebar',
    name: 'displaysInSidebar',
    on: field['displaysInSidebar']}) }}
